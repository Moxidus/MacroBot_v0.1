                    xmlns:local="clr-namespace:grabbableBlocks.CustomControls">

    <Style TargetType="local:ContentBlockSetVar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ContentBlockSetVar">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Set" />
