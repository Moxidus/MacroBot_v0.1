<Window x:Class="MacroBot_v0._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroBot_v0._1"
        mc:Ignorable="d"
        Icon="/Assets/logo.png"
        Title="Macro Bot" Height="450" Width="800">

    
    
    

    <Grid Background="#525252">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10px"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="10px"/>
            <RowDefinition Height="25px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10px"/>
        </Grid.RowDefinitions>

        
        
        
        
        <DockPanel Grid.ColumnSpan="3" HorizontalAlignment="Stretch">
            <Menu DockPanel.Dock="Top" Background="#FF414141" Foreground="White">
                <MenuItem Header="_File" BorderBrush="{x:Null}">
                    <MenuItem Header="_New" Foreground="Black" Click="createNew"/>
                    <MenuItem Header="_Open" Foreground="Black" Click="OpenFile"/>
                    <MenuItem Header="_Save" Foreground="Black" Click="SaveFile"/>
                    <MenuItem Header="_Save as" Foreground="Black" Click="SaveFileAs"/>
                    <Separator/>
                    <MenuItem Header="_Exit" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="_Edit" BorderBrush="{x:Null}">
                    <MenuItem Header="_Insert Image" Foreground="Black"/>
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" Background="{x:Null}" BorderBrush="{x:Null}" />
        </DockPanel>

        <StackPanel Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Click="StartProgram">
                <TextBlock Text="Start"/>
            </Button>
            <Button>
                <TextBlock Text="Block Editor"/>
            </Button>
        </StackPanel>
        
        
        


        <RichTextBox x:Name="scriptCode" 
                     Grid.Column="1"
                     Grid.Row="3" 
                     Background="#FF313131"
                     BorderBrush="{x:Null}"
                     Foreground="White" AcceptsTab="True">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
        
    </Grid>
</Window>
